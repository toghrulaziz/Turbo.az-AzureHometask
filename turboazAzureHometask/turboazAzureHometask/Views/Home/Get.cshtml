@model Car
<link href="~/css/get.css" rel="stylesheet" />


<div class="product-details">
    <div class="title-container">
        <h2 class="product-title">Car Details</h2>
    </div>
    <div class="flex-container">
        <div class="product-image">
            <img src="@Model.ImageUrl" alt="Product Image">
        </div>
        <div class="product-info">
            <p><span class="strong-text">Model:</span> @Model.Model</p>
            <p><span class="strong-text">Vendor:</span> @Model.Vendor</p>
            <p><span class="strong-text">Year:</span> @Model.Year</p>
            <p><span class="strong-text">Price:</span> <span class="price-text">@Model.Price $</span></p>
        </div>
    </div>
</div>