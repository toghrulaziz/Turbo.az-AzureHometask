@model List<Car>
<link href="~/css/index.css" rel="stylesheet" />


@if (0 < Model.Count)
{
    <div class="d-flex gap-2">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <a asp-controller="Home" asp-action="Get" asp-route-id="@item.Id">
                    <img src="@item.ImageUrl" alt="@item.Model" class="card-img-top" />
                </a>
                <div class="card-body">
                    <h5 class="card-title">Model: @item.Model</h5>
                    <p class="card-text">Vendor: @item.Vendor</p>
                    <p class="card-text">Year: @item.Year</p>
                    <p class="card-text">Price: @item.Price</p>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1>Empty</h1>
}